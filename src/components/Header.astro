---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<header class="fixed top-0 left-0 right-0 z-50 py-1 bg-stone-100/75 dark:bg-stone-900/25 backdrop-blur-sm saturate-200">
  <Container>
    <div >
      <Link href="/" underline={false}>
        <div class="flex items-center gap-2">
          <img src="/logo.svg" class="w-6 mb-1" />
          {SITE.NAME}
        </div>

      </Link>
    </div>
  </Container>
</header>
