---
import BlurImage from "@components/BlurImage/BlurImage.astro";

const { src, alt = "", class: className = "", ...rest } = Astro.props;
---

<BlurImage
  src={src}
  alt={alt}
  class={className}
  quality={85}
  placeholderQuality={20}
  loading="lazy"
  blurAmount={8}
  transitionDuration={500}
  fallbackDelay={2000}
  {...rest}
/>
