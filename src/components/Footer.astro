---
import { FaRegUser, FaGithub } from "react-icons/fa";

import { SITE } from "@consts";

import Container from "@components/Container.astro";
import BackToTop from "@components/BackToTop.astro";
import { cn } from "@lib/utils";

const classes = {
  link: cn("group size-8 flex items-center justify-center rounded-full")
};

---

<footer class="animate">
  <Container>
    <div class="relative">
      <div class="absolute right-0 -top-20">
        <BackToTop />
      </div>
    </div>
    <div class="flex justify-between items-center">
      <div>
        &copy; {(new Date).getFullYear()} {`|`} {SITE.NAME}
      </div>
      <div class="flex flex-wrap gap-1 items-center">

        <a href="https://github.com/makinox" class={classes.link} target="_blank">
          <FaGithub />
        </a>

        <a href="https://jesusbossa.dev/" class={classes.link} target="_blank">
          <FaRegUser />
        </a>

      </div>
    </div>
  </Container>
</footer>
