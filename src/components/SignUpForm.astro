---
import { sharedClasses } from "@styles/sharedClasses";
---

<div id="signup-form" class="space-y-4 hidden">
  <div class="form-control">
    <label class="label">
      <span class={sharedClasses.inputLabel}>Nombre completo</span>
    </label>
    <input 
      type="text" 
      placeholder="Tu nombre completo" 
      class={sharedClasses.input}
    />
  </div>
  
  <div class="form-control">
    <label class="label">
      <span class={sharedClasses.inputLabel}>Email</span>
    </label>
    <input 
      type="email" 
      placeholder="tu@email.com" 
      class={sharedClasses.input}
    />
  </div>
  
  <div class="form-control">
    <label class="label">
      <span class={sharedClasses.inputLabel}>Contraseña</span>
    </label>
    <input 
      type="password" 
      placeholder="••••••••" 
      class={sharedClasses.input}
    />
  </div>
  
  <div class="form-control">
    <label class="label">
      <span class={sharedClasses.inputLabel}>Confirmar contraseña</span>
    </label>
    <input 
      type="password" 
      placeholder="••••••••" 
      class={sharedClasses.input}
    />
  </div>
  
  <div class="form-control">
    <label class="label cursor-pointer">
      <span class={sharedClasses.inputLabel}>
        Acepto los <a href="#" class="link link-hover text-stone-500 dark:text-stone-400">términos y condiciones</a>
      </span>
      <input type="checkbox" class="checkbox checkbox-sm" />
    </label>
  </div>
  
  <button class="btn btn-primary w-full bg-stone-800 hover:bg-stone-700 dark:bg-stone-200 dark:hover:bg-stone-300 dark:text-black text-white border-0">
    Crear cuenta
  </button>
</div> 