---
import { ShareButton } from "@components/ShareButton/ShareButton";
import { RemindButton } from "@components/RemindButton/RemindButton";
import { LikeButton } from "@components/LikeButton/LikeButton";

const {post} = Astro.props;
---

<section class="flex items-center gap-4 mb-6">
  <img class="w-24 h-24 rounded-full" src={post.data.authorImage} alt={post.data.author} />
  <div>
    <p class="text-sm">Escrito por</p>
    <h5 class="text-xl font-bold">{post.data.author}</h5>
    <p class="text-sm">{post.data.authorDescription}</p>
    <div class="mt-2 flex items-center gap-2 flex-wrap">
      <ShareButton client:visible />
      <RemindButton client:visible />
      <LikeButton client:visible />
    </div>
  </div>
</section>
