---
import { VerifyEmailForm } from "@components/VerifyEmailForm/VerifyEmailForm";
import Container from "@components/Container/Container.astro";
import Footer from "@components/Footer/Footer.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { SITE } from "@consts";

const VERIFY_EMAIL = {
  TITLE: "Verificar Email",
  DESCRIPTION: "Verifica tu dirección de email en Voib.",
};
---

<PageLayout title={VERIFY_EMAIL.TITLE} description={VERIFY_EMAIL.DESCRIPTION}>
  <Container>
    <div class="min-h-screen flex items-center justify-center py-20">
      <div class="w-full max-w-md">
        <div class="text-center mb-8">
          <div class="flex items-center justify-center gap-2 mb-4">
            <img src="/logo.svg" class="w-8 h-8" alt="Voib Logo" />
            <h1 class="text-2xl font-semibold text-black dark:text-white mt-1">{SITE.NAME}</h1>
          </div>
        </div>

        <VerifyEmailForm client:only />

        <div class="text-center mt-8">
          <a href="/" class="link link-hover text-stone-500 dark:text-stone-400">
            ← Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </Container>
  <Footer />
</PageLayout> 