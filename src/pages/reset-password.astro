---
import Container from "@components/Container/Container.astro";
import Footer from "@components/Footer/Footer.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { ResetPasswordForm } from "@components/ResetPasswordForm/ResetPasswordForm";
import { AuthHeader } from "@components/AuthHeader/AuthHeader";
import { SITE } from "@consts";

const RESET_PASSWORD = {
  TITLE: "Reset de Contraseña",
  DESCRIPTION: "Cambia tu contraseña en Voib.",
};
---

<PageLayout title={RESET_PASSWORD.TITLE} description={RESET_PASSWORD.DESCRIPTION}>
  <AuthHeader client:load redirectIfAuthenticated={true} />
  <Container>
    <div class="min-h-screen flex items-center justify-center py-20">
      <div class="w-full max-w-md">
        <div class="text-center mb-8">
          <div class="flex items-center justify-center gap-2 mb-4">
            <img src="/logo.svg" class="w-8 h-8" alt="Voib Logo" />
            <h1 class="text-2xl font-semibold text-black dark:text-white mt-1">{SITE.NAME}</h1>
          </div>
        </div>

        <ResetPasswordForm client:only />

        <div class="text-center mt-8">
          <a href="/" class="link link-hover text-stone-500 dark:text-stone-400">
            ← Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </Container>
  <Footer />
</PageLayout> 