---
import Container from "@components/Container/Container.astro";
import Footer from "@components/Footer/Footer.astro";
import PageLayout from "@layouts/PageLayout.astro";
import { AuthForms } from "@components/AuthForms/AuthForms";
import { AuthHeader } from "@components/AuthHeader/AuthHeader";
import { SITE } from "@consts";

const AUTH = {
  TITLE: "Autenticación",
  DESCRIPTION: "Inicia sesión o regístrate en Voib para acceder a contenido exclusivo.",
};
---

<PageLayout title={AUTH.TITLE} description={AUTH.DESCRIPTION}>
  <AuthHeader client:load redirectIfAuthenticated={true} />
  <Container>
    <div class="min-h-screen flex items-center justify-center py-20">
      <div class="w-full max-w-md">
        <!-- Logo y título -->
        <div class="text-center mb-8">
          <div class="flex items-center justify-center gap-2 mb-4">
            <img src="/logo.svg" class="w-8 h-8" alt="Voib Logo" />
            <h1 class="text-2xl font-semibold text-black dark:text-white mt-1">{SITE.NAME}</h1>
          </div>
          <p class="text-black/60 dark:text-white/60">Bienvenido de vuelta</p>
        </div>

        <AuthForms client:only />

        <div class="text-center mt-8">
          <a href="/" class="link link-hover text-stone-500 dark:text-stone-400">
            ← Volver al inicio
          </a>
        </div>
      </div>
    </div>
  </Container>
  <Footer />
</PageLayout> 